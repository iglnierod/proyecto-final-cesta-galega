generator client {
  provider = "prisma-client-js"
  url      = env("DATABASE_URL")
  output   = "../app/generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        Int       @id @default(autoincrement())
  name      String
  email     String    @unique
  sex       String?
  birt_date DateTime?
  province  String?
  password  String
  createdAt DateTime  @default(now())
}

model Business {
  id            Int      @id @default(autoincrement())
  name          String
  email         String   @unique
  business_type String
  phone_number  String
  address       String
  city          String
  province      String
  postal_code   String
  password      String
  createdAt     DateTime @default(now())
}
